extends ./layout.pug

block append body
  body.homepage
    section.hero
      .container--lg
        .hero__overlay
          h2 Custom Web Design &amp; Application Development
          
    section.projects
      .container--lg
        .projects-list
          each project in projects
            a.project(href=ctx.linkResolver(project))
              figcaption= project.getText('project.title')
              figure
                img(src=project.getImage('project.thumbnail').url)
